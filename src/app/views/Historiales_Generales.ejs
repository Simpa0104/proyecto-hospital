<%- include('../includes/head.ejs') %>
    <title>Historial de Evaluaciones</title>
</head>

<body>
    <%- include('../includes/contacto.ejs') %>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Historial de Evaluaciones</h1>
            <a href="/Cuestionario_Riesgos" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva Evaluación
            </a>
        </div>

        <% if (test1 && test1.length > 0) { %>
            <div class="row">
                <% test1.forEach(paciente => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h4 class="card-title">
                                            <%= paciente.nombre %>
                                            <small class="text-muted">#<%= paciente.episodio %></small>
                                        </h4>
                                        <p class="text-muted">
                                            <i class="fas fa-calendar-alt"></i>
                                            <%= paciente.fecha %>
                                        </p>
                                    </div>
                                    <% 
                                    // Asignación segura de clases para el badge
                                    let badgeClass = 'bg-secondary';
                                    let categoriaDisplay = paciente.categoria || 'Sin categoría';
                                    
                                    if (categoriaDisplay.includes('Psicosocial')) {
                                        badgeClass = 'bg-danger';
                                    } else if (categoriaDisplay.includes('Biológico')) {
                                        badgeClass = 'bg-info';
                                    }
                                    %>
                                    <span class="badge <%= badgeClass %>">
                                        <%= categoriaDisplay %>
                                    </span>
                                </div>

                                <% if (paciente.nivel_riesgo) { %>
                                    <hr>
                                    <div class="mt-3">
                                        <h6>Nivel de Riesgo: <strong><%= paciente.nivel_riesgo %></strong></h6>
                                        <p>
                                            Psicológico: <strong><%= paciente.psico %></strong><br>
                                            Biológico: <strong><%= paciente.bio %></strong><br>
                                            Social: <strong><%= paciente.social %></strong>
                                        </p>
                                    </div>
                                <% } %>

                                <div class="d-flex justify-content-between mt-3">
                                    <form action="/eliminar-evaluacion/<%= paciente.id %>" method="POST" onsubmit="return confirm('¿Estás seguro de eliminar esta evaluación?');">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Eliminar
                                        </button>
                                    </form>
                                    <a href="/Cuestionario_Niveles2/<%= paciente.id %>" class="btn btn-link">
                                        Ver Detalles <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No hay evaluaciones registradas
            </div>
        <% } %>
    </div>

    <%- include('../includes/footer.ejs') %>
</body>
</html>