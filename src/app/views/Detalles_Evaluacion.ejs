<%- include('../includes/head.ejs') %>
<title>Detalles de Evaluación</title>
<%- include('../includes/contacto.ejs') %>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Detalles de la Evaluación</h1>
        <a href="/Historial" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Historial
        </a>
    </div>

    <!-- Mostrar detalles de la evaluación -->
    <div class="card shadow">
        <div class="card-body">
            <h4 class="card-title">
                <%= evaluacion.nombre %>
                <small class="text-muted">#<%= evaluacion.episodio %></small>
            </h4>
            <p class="text-muted">
                <i class="fas fa-calendar-alt"></i>
                <%= evaluacion.fecha %>
            </p>

            <hr>
            <div>
                <h5>Categoría:</h5>
                <span class="badge <%= evaluacion.categoria === 'Psicosocial' ? 'bg-danger' : evaluacion.categoria === 'Biológico' ? 'bg-info' : 'bg-secondary' %>">
                    <%= evaluacion.categoria %>
                </span>
            </div>

            <div class="mt-3">
                <h6>Nivel de Riesgo: <strong><%= evaluacion.nivel_riesgo %></strong></h6>
                <p>
                    Psicológico: <strong><%= evaluacion.psico %></strong><br>
                    Biológico: <strong><%= evaluacion.bio %></strong><br>
                    Social: <strong><%= evaluacion.social %></strong>
                </p>
            </div>

            <hr>
            <h5>Resumen de Resultados</h5>
            <div>
                <p><strong>Psicológico:</strong> <%= evaluacion.psico %></p>
                <p><strong>Biológico:</strong> <%= evaluacion.bio %></p>
                <p><strong>Social:</strong> <%= evaluacion.social %></p>
            </div>
        </div>
    </div>

</div>

<%- include('../includes/footer.ejs') %>